---
import { content } from '../../data/denise';
---

<a 
  href={`https://wa.me/${content.hero.whatsapp}`} 
  target="_blank" 
  rel="noopener noreferrer"
  class="fixed bottom-8 right-8 z-999 group"
  aria-label="Contato via WhatsApp"
>
  <span class="absolute right-full mr-4 top-1/2 -translate-y-1/2 bg-white px-4 py-2 text-[10px] uppercase tracking-[0.2em] font-bold text-brand-purple shadow-xl opacity-0 group-hover:opacity-100 transition-all duration-300 pointer-events-none whitespace-nowrap border border-gray-100">
    Fale Conosco
  </span>

  <span class="absolute inset-0 rounded-full bg-brand-purple opacity-20 animate-slow-ping group-hover:animate-none"></span>

  <div class="relative w-14 h-14 bg-brand-purple text-white rounded-full flex items-center justify-center shadow-2xl transition-transform duration-500 group-hover:scale-110 group-active:scale-95">
    <svg 
      xmlns="http://www.w3.org/2000/svg" 
      width="24" 
      height="24" 
      viewBox="0 0 24 24" 
      fill="none" 
      stroke="currentColor" 
      stroke-width="2" 
      stroke-linecap="round" 
      stroke-linejoin="round"
    >
      <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
    </svg>
  </div>
</a>

<style>
  /* Define o pulso lento: 3 segundos por ciclo em vez de 1 */
  .animate-slow-ping {
    animation: ping 3s cubic-bezier(0, 0, 0.2, 1) infinite;
  }

  @keyframes ping {
    75%, 100% {
      transform: scale(2);
      opacity: 0;
    }
  }
</style>