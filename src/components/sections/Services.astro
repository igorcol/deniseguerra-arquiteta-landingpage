---
import { content } from '../../data/denise';
---

<section id="servicos" class="py-24 bg-white">
  <div class="container mx-auto px-6">
    <div class="mb-16">
      <span class="text-brand-purple tracking-[0.3em] uppercase text-xs mb-4 block">Expertise</span>
      <h2 class="text-4xl md:text-5xl font-serif mb-6">{content.services.title}</h2>
      <p class="text-gray-500 max-w-lg leading-relaxed">{content.services.subtitle}</p>
    </div>

    <div class="max-w-4xl border-t border-gray-200">
      {content.services.items.map((item) => (
        <details class="group border-b border-gray-200">
          <summary class="flex justify-between items-center cursor-pointer py-8 list-none group-hover:bg-off-white/50 transition-all px-4">
            <h3 class="text-xl md:text-2xl font-serif group-open:text-brand-purple transition-colors">
              {item.title}
            </h3>
            <span class="relative flex items-center justify-center w-6 h-6">
              <span class="absolute w-full h-0.5 bg-gray-300 group-open:rotate-90 transition-transform duration-300"></span>
              <span class="absolute w-full h-0.5 bg-gray-300 group-open:opacity-0 transition-opacity"></span>
            </span>
          </summary>
          
          <div class="px-4 pb-8 grid grid-cols-1 md:grid-cols-2 gap-8 animate-fade-down animate-duration-300">
            <div>
              <p class="text-gray-600 leading-relaxed mb-4">
                {item.description}
              </p>
            </div>
            <ul class="grid grid-cols-1 gap-2">
              {item.list.map(point => (
                <li class="flex items-center gap-3 text-sm text-gray-500">
                  <span class="w-1.5 h-1.5 bg-brand-purple rounded-full"></span>
                  {point}
                </li>
              ))}
            </ul>
          </div>
        </details>
      ))}
    </div>

    <div class="mt-16">
      <a href={`https://wa.me/${content.hero.whatsapp}`} 
         class="inline-flex items-center gap-4 text-brand-purple font-semibold tracking-widest text-xs uppercase group">
        Falar com Denise sobre meu projeto
        <span class="w-12 h-px bg-brand-purple group-hover:w-20 transition-all"></span>
      </a>
    </div>
  </div>
</section>

<style>
  /* Remove a seta padr√£o do details */
  summary::-webkit-details-marker {
    display: none;
  }
  
  @keyframes fade-down {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-down {
    animation: fade-down 0.4s ease-out forwards;
  }
</style>