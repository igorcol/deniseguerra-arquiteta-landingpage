---
// src/components/sections/Hero.astro
import { content } from '../../data/denise';
---

<section class="relative min-h-screen flex items-center pt-20 overflow-hidden bg-off-white">
  <div class="absolute top-0 left-0 w-full h-full opacity-[0.03] pointer-events-none select-none font-serif text-[40vw] leading-none -translate-x-1/4 translate-y-1/4">
    DG
  </div>

  <div class="container mx-auto px-6 grid grid-cols-1 lg:grid-cols-12 gap-16 items-center relative z-10">
    
    <div class="lg:col-span-7">
      <div class="inline-flex items-center gap-4 mb-6 animate-fade-in">
        <span class="w-12 h-px bg-brand-purple"></span>
        <span class="text-brand-purple tracking-[0.4em] uppercase text-[10px] font-bold">
          Arquitetura, Urbanismo & Design de Interiores
        </span>
      </div>
      
      <h1 class="text-6xl md:text-8xl lg:text-[100px] leading-[0.9] mb-10 font-serif tracking-tight">
        <span class="block overflow-hidden">
          <span class="block animate-slide-up uppercase">{content.hero.title.split(' ').slice(0, 2).join(' ')}</span>
        </span>
        <span class="block overflow-hidden">
          <span class="block animate-slide-up italic text-gray-400 font-light" style="animation-delay: 0.2s;">
            {content.hero.title.split(' ').slice(2).join(' ')}
          </span>
        </span>
      </h1>

      <p class="text-xl text-gray-500 max-w-md mb-12 leading-relaxed font-light">
        {content.hero.subtitle}
      </p>

      <div class="flex items-center gap-8">
        <a href={`https://wa.me/${content.hero.whatsapp}`} 
           class="group relative overflow-hidden bg-brand-purple text-white px-12 py-6 text-xs uppercase tracking-[0.3em] transition-all">
          <span class="relative z-10">{content.hero.cta}</span>
          <div class="absolute inset-0 bg-black translate-y-full group-hover:translate-y-0 transition-transform duration-500"></div>
        </a>
        
        <div class="hidden sm:block border-l border-gray-200 pl-8">
           <p class="text-2xl font-serif leading-none">+105</p>
           <p class="text-[10px] uppercase tracking-widest text-gray-400 mt-1">Clientes Satisfeitos</p>
        </div>
      </div>
    </div>

    <div class="lg:col-span-5 relative group">
      
      <div class="absolute inset-0 border border-brand-purple translate-x-6 translate-y-6 -z-10 transition-transform duration-700 group-hover:translate-x-4 group-hover:translate-y-4"></div>

      <div class="aspect-3/4 overflow-hidden relative bg-gray-100 shadow-2xl">
        <img 
          src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?auto=format&fit=crop&q=80&w=1000" 
          alt="Projeto Denise Guerra"
          class="w-full h-full object-cover transition-transform duration-[2s] group-hover:scale-110"
          id="hero-image"
          fetchpriority="high"
        />
        <div class="absolute inset-0 border-20 border-white/10 pointer-events-none"></div>
      </div>
      
      <div class="absolute -bottom-8 -right-8 bg-white/80 backdrop-blur-xl p-10 shadow-2xl border border-white/20 hidden md:block z-20">
        <p class="text-[10px] uppercase tracking-[0.3em] text-brand-purple font-bold mb-3">Expertise</p>
        <p class="text-xl font-serif text-gray-800 leading-tight">ExcelÃªncia em<br/>cada detalhe</p>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes slide-up {
    from { transform: translateY(110%); }
    to { transform: translateY(0); }
  }
  
  @keyframes fade-in {
    from { opacity: 0; transform: translateX(-20px); }
    to { opacity: 1; transform: translateX(0); }
  }

  .animate-slide-up {
    animation: slide-up 1.2s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }
  
  .animate-fade-in {
    animation: fade-in 1s ease-out forwards;
  }
</style>