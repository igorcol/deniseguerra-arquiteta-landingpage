---
import { content } from '../../data/denise';
---

<section id="portfolio" class="py-24 bg-white">
  <div class="container mx-auto px-6">
    <div class="max-w-3xl mb-16">
      <span class="text-brand-purple tracking-[0.3em] uppercase text-xs mb-4 block">Portf√≥lio</span>
      <h2 class="text-4xl md:text-5xl font-serif mb-6">{content.projects.title}</h2>
      <p class="text-gray-500 leading-relaxed">{content.projects.subtitle}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {content.projects.items.map((project, index) => (
        <div class={`group relative overflow-hidden bg-gray-100 ${index % 3 === 0 ? 'md:col-span-1' : ''}`}>
          <div class="aspect-4/5 md:aspect-16/10 overflow-hidden">
            <img 
              src={project.image} 
              alt={project.title}
              loading="lazy"
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 grayscale-[0.5] group-hover:grayscale-0"
            />
          </div>
          
          <div class="absolute inset-0 bg-linear-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex flex-col justify-end p-8">
            <p class="text-white/60 text-xs uppercase tracking-widest mb-2">{project.category}</p>
            <h3 class="text-white text-2xl font-serif">{project.title}</h3>
            <div class="w-0 group-hover:w-full h-px bg-white/30 mt-4 transition-all duration-700"></div>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-16 text-center">
        <button class="border border-gray-200 px-12 py-4 text-xs uppercase tracking-[0.2em] hover:bg-black hover:text-white transition-all">
            Ver Projetos Completos
        </button>
    </div>
  </div>
</section>