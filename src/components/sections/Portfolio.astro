---
// src/components/sections/Portfolio.astro
import { content } from '../../data/denise';
---

<section id="portfolio" class="py-32 bg-white overflow-hidden">
  <div class="container mx-auto px-6">
    
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 mb-24 items-end">
      <div class="lg:col-span-7">
        <span class="text-brand-purple tracking-[0.4em] uppercase text-[10px] font-bold mb-6 block">Portf√≥lio</span>
        <h2 class="text-5xl md:text-7xl font-serif leading-[1.1] tracking-tight">
          {content.projects.titlePrincipal} <br/>
          <span class="italic text-gray-400">{content.projects.titleDestaque}</span>
        </h2>
      </div>
      <div class="lg:col-span-5">
        <p class="text-gray-500 text-lg leading-relaxed border-l-2 border-brand-purple/20 pl-8 italic font-light">
          "{content.projects.manifesto}"
        </p>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-12 gap-8 lg:gap-12">
      
      {content.projects.items.map((project, index) => (
        <div class={`group relative overflow-hidden bg-[#F5F5F5] transition-all duration-700
          ${index === 0 ? 'md:col-span-8 aspect-video' : 
            index === 1 ? 'md:col-span-4 aspect-4/5 md:translate-y-20' : 
            'md:col-span-6 aspect-square md:-translate-y-10'}`}
        >
          <img 
            src={project.image} 
            alt={project.title}
            loading="lazy"
            class="w-full h-full object-cover transition-transform duration-[2s] scale-105 group-hover:scale-100 grayscale-[0.2] group-hover:grayscale-0"
          />
          
          <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-all duration-500 flex flex-col justify-end p-12 backdrop-blur-[2px]">
            <div class="overflow-hidden">
              <p class="text-white/70 text-[10px] uppercase tracking-[0.4em] mb-3 translate-y-full group-hover:translate-y-0 transition-transform duration-500">
                {project.category}
              </p>
            </div>
            <div class="overflow-hidden">
              <h3 class="text-white text-3xl font-serif translate-y-full group-hover:translate-y-0 transition-transform duration-500 delay-75">
                {project.title}
              </h3>
            </div>
            <div class="w-0 group-hover:w-full h-px bg-white/40 mt-6 transition-all duration-1000 ease-in-out"></div>
          </div>

          <span class="absolute top-8 left-8 text-white/20 font-serif text-4xl opacity-0 group-hover:opacity-100 transition-opacity">
            0{index + 1}
          </span>
        </div>
      ))}
    </div>

    <div class="mt-32 text-center">
      <a href={`https://wa.me/${content.hero.whatsapp}`} class="inline-block relative group">
        <span class="relative z-10 border border-gray-200 px-16 py-6 text-[10px] uppercase tracking-[0.5em] font-bold group-hover:text-white transition-colors duration-500">
          Ver Projetos Completos
        </span>
        <div class="absolute inset-0 bg-black scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
      </a>
    </div>
  </div>
</section>