---
// src/components/sections/Portfolio.astro
import { content } from '../../data/denise';
---

<section id="portfolio" class="py-32 bg-white overflow-hidden">
  <div class="container mx-auto px-6">
    
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 mb-32 items-end">
      <div class="lg:col-span-7">
        <span class="text-brand-purple tracking-[0.4em] uppercase text-[10px] font-bold mb-6 block">Portfólio</span>
        <h2 class="text-5xl md:text-6xl font-serif leading-[1.1] tracking-tight">
          {content.projects.titlePrincipal} <br/>
          <span class="italic text-gray-400 font-light">{content.projects.titleDestaque}</span>
        </h2>
      </div>
      <div class="lg:col-span-5">
        <p class="text-gray-500 text-lg leading-relaxed border-l-2 border-brand-purple/20 pl-8 italic font-light">
          "{content.projects.manifesto}"
        </p>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-12 gap-y-24 items-start">
      
      {content.projects.items.map((project, index) => (
        <div class="group relative">
          
          <div class="absolute -bottom-2.5 -right-2.5 w-24 h-10 border-r border-b border-brand-purple z-0 transition-all duration-500 group-hover:-bottom-1.5 group-hover:-right-1.5"></div>

          <div class="relative z-10 aspect-4/5 overflow-hidden bg-gray-100 shadow-sm">
            <img 
              src={project.image} 
              alt={project.title}
              loading="lazy"
              class="w-full h-full object-cover transition-transform duration-[2s] group-hover:scale-105"
            />
          </div>
          
          <div class="mt-8 space-y-1 relative z-10">
            <p class="text-[10px] uppercase tracking-[0.3em] text-brand-purple font-bold">
              0{index + 1} // {project.category}
            </p>
            <h3 class="text-xl font-serif text-gray-800 tracking-tight">
              {project.title}
            </h3>
          </div>
        </div>
      ))}

    </div>

    <div class="mt-24 text-center">
      <a href={`https://wa.me/${content.hero.whatsapp}`} 
         class="inline-block border-b border-gray-200 pb-2 text-[10px] uppercase tracking-[0.4em] font-bold text-gray-400 hover:text-brand-purple hover:border-brand-purple transition-all">
        Ver coleção completa
      </a>
    </div>
  </div>
</section>